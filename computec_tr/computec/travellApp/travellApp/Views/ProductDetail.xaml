<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="computecApp.Views.ProductDetail"
             Title="Agrega un nuevo Producto"
             >
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry Placeholder="Nombre"
                   x:Name="nameEntry"
                   TextTransform="Uppercase"/>
            <Entry Placeholder="Precio"
                   x:Name="priceEntry"
                   Keyboard="Numeric"/>
            <Button Text="Guardar"
                    Clicked="Save_Clicked" Style="{StaticResource Highlighted}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>